# CVAT Environment Configuration
# This file contains environment variables for CVAT setup

# CVAT Version - use 'dev' for development or specific version like '2.0.0'
CVAT_VERSION=dev

# Host configuration
CVAT_HOST=localhost

# Database configuration
POSTGRES_USER=root
POSTGRES_DB=cvat
POSTGRES_PASSWORD=

# Redis configuration
CVAT_REDIS_HOST=cvat_redis
CVAT_REDIS_PORT=6379

# CVAT specific settings
CVAT_BASE_URL=http://localhost:3000
ALLOWED_HOSTS=*

# Disable analytics for local development
CVAT_ANALYTICS=0

# Static cache settings
CVAT_ALLOW_STATIC_CACHE=no

# Logging
CVAT_LOG_IMPORT_ERRORS=true

# OPA (Open Policy Agent) - disabled for simple setup
CVAT_OPA_ENABLED=false
CVAT_OPA_HOST=
CVAT_OPA_PORT=

# Worker processes
NUMPROCS=2

# Development settings
DJANGO_DEBUG=true
DJANGO_LOG_LEVEL=INFO
